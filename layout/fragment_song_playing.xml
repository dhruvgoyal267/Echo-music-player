<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:background="#eeeeee"
        android:layout_width="match_parent">
    <RelativeLayout
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="#faccb4"
            android:id="@+id/songUp"
            android:layout_width="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/musicPic"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/url"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/informationSong"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
        <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/white_circle_icon"
                android:src="@drawable/favorite_off"
                android:id="@+id/favouriteIcon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="?android:attr/actionBarSize"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/informationSong"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
        >
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/songTitle"
                    android:textSize="21sp"
                    android:layout_marginTop="5dp"
                    android:text="Castle of glass"
                    android:singleLine="true"
                    android:ellipsize="marquee"
            />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:id="@+id/songArtist"
                    android:textSize="17sp"
                    android:text="Linkin Park"
                    android:layout_below="@+id/songTitle"
                    android:singleLine="true"
                    android:ellipsize="marquee"
            />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:id="@+id/songBottom"
    >
        <com.cleveroad.audiovisualization.GLAudioVisualizationView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/visualizer_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                app:av_bubblesSize="40dp"
                android:clickable="false"
                app:av_bubblesRandomizeSizes="true"
                app:av_wavesHeight="40dp"
                app:av_wavesFooterHeight="250dp"
                app:av_wavesCount="27"
                app:av_layersCount="4"
                app:av_backgroundColor="#faccb4"
                app:av_wavesColors="@array/rainbow"
                app:av_bubblesPerLayer="35"
        />

        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_above="@+id/startTime"
        />
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/feature"
                android:layout_marginLeft="15dp"
                android:id="@+id/startTime"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall"
        />
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/feature"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:id="@+id/endTime"
                android:textAppearance="?android:attr/textAppearanceSmall"
        />
        <RelativeLayout
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:id="@+id/feature"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

            <ImageButton
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:minWidth="0dp"
                    android:id="@+id/playPauseButton"
                    android:hapticFeedbackEnabled="true"
                    android:minHeight="0dp"
                    android:background="@drawable/play_icon"
            />
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:minWidth="0dp"
                    android:id="@+id/previousButton"
                    android:layout_toLeftOf="@+id/playPauseButton"
                    android:minHeight="0dp"
                    android:layout_marginRight="19dp"
                    android:background="@drawable/play_previous_icon"
            />
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:minWidth="0dp"
                    android:layout_toRightOf="@+id/playPauseButton"
                    android:id="@+id/nextButton"
                    android:minHeight="0dp"
                    android:layout_marginLeft="19dp"
                    android:background="@drawable/play_next_icon"
            />
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/previousButton"
                    android:minWidth="0dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/shuffleButton"
                    android:minHeight="0dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/shuffle_white_icon"
            />
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:minWidth="0dp"
                    android:id="@+id/loopButton"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/nextButton"
                    android:minHeight="0dp"
                    android:background="@drawable/loop_white_icon"
            />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>